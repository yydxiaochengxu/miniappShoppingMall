/* pages/record/record.wxss */
page{background:#f1f1f1;}
.list{width:710rpx;height:300rpx;border-radius:12rpx;box-sizing: border-box;margin:20rpx auto;padding:36rpx 30rpx;position:relative;}
.list::before{content:'';position:absolute;top:0;left:0;width:inherit;height:inherit;background:#ffffff;filter:blur(5rpx);z-index:-2;}
.listimg{width:80rpx;height:80rpx;background:linear-gradient(135deg,orangered,orange);border-radius:50%;margin-right:30rpx;}
.title{font-size:36rpx;color:#353535;font-weight:bold;}
.content{padding-left:110rpx;font-size:26rpx;color:#888888;word-break:break-all;margin-top:8rpx;}
.listfooter{padding-left:110rpx;color:#79A4BB;font-size:30rpx;font-weight:bold;}